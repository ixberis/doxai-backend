
{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "panel", "id": "bargauge", "name": "Bar gauge", "version": "" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" },
    { "type": "panel", "id": "table", "name": "Table", "version": "" },
    { "type": "panel", "id": "heatmap", "name": "Heatmap", "version": "" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "2.0.0" }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": false,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "refresh": "30s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["projects", "metrics", "prometheus"],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "label": "Prometheus",
        "type": "datasource",
        "query": "prometheus",
        "current": { "selected": true },
        "hide": 0
      },
      {
        "name": "endpoint",
        "label": "Endpoint",
        "type": "query",
        "datasource": "$datasource",
        "refresh": 2,
        "query": "label_values(projects_snapshot_db_requests_total, endpoint)",
        "includeAll": true,
        "multi": false,
        "current": { "selected": true, "text": "All", "value": "__all" }
      }
    ]
  },
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": { "refresh_intervals": ["5s","10s","30s","1m","5m","15m","30m","1h"] },
  "timezone": "",
  "title": "DoxAI • Projects • Métricas",
  "uid": "doxai-projects-metrics",
  "version": 1,
  "panels": [
    {
      "type": "stat",
      "title": "Requests/min (Snapshot DB)",
      "id": 1,
      "datasource": "$datasource",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(projects_snapshot_db_requests_total{endpoint=~\"$endpoint|.*\"}[1m]))",
          "legendFormat": "req/min",
          "refId": "A"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "horizontal" }
    },
    {
      "type": "stat",
      "title": "Error Ratio (5m)",
      "id": 2,
      "datasource": "$datasource",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(projects_snapshot_db_requests_total{status_code!~\"2..\",endpoint=~\"$endpoint|.*\"}[5m])) / sum(rate(projects_snapshot_db_requests_total{endpoint=~\"$endpoint|.*\"}[5m]))",
          "legendFormat": "error ratio",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percentunit", "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 0.05 }] } },
        "overrides": []
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "horizontal" }
    },
    {
      "type": "timeseries",
      "title": "Latency p50 / p90 / p99 (Snapshot DB)",
      "id": 3,
      "datasource": "$datasource",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum by (le) (rate(projects_snapshot_db_latency_seconds_bucket{endpoint=~\"$endpoint|.*\"}[5m])))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.9, sum by (le) (rate(projects_snapshot_db_latency_seconds_bucket{endpoint=~\"$endpoint|.*\"}[5m])))",
          "legendFormat": "p90",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(projects_snapshot_db_latency_seconds_bucket{endpoint=~\"$endpoint|.*\"}[5m])))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
      "options": { "legend": { "displayMode": "table", "placement": "right" } }
    },
    {
      "type": "timeseries",
      "title": "Requests por segundo (1m, 5m)",
      "id": 4,
      "datasource": "$datasource",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "sum(rate(projects_snapshot_db_requests_total{endpoint=~\"$endpoint|.*\"}[1m]))",
          "legendFormat": "rps(1m)",
          "refId": "A"
        },
        {
          "expr": "sum(rate(projects_snapshot_db_requests_total{endpoint=~\"$endpoint|.*\"}[5m]))",
          "legendFormat": "rps(5m)",
          "refId": "B"
        }
      ],
      "options": { "legend": { "displayMode": "table", "placement": "right" } }
    },
    {
      "type": "table",
      "title": "Requests por status_code / method",
      "id": 5,
      "datasource": "$datasource",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "sum by (status_code, method) (rate(projects_snapshot_db_requests_total{endpoint=~\"$endpoint|.*\"}[5m]))",
          "legendFormat": "{{status_code}} {{method}}",
          "refId": "A"
        }
      ],
      "transformations": [],
      "options": { "showHeader": true }
    },
    {
      "type": "heatmap",
      "title": "Distribución de latencias (heatmap)",
      "id": 6,
      "datasource": "$datasource",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "sum by (le) (rate(projects_snapshot_db_latency_seconds_bucket{endpoint=~\"$endpoint|.*\"}[5m]))",
          "legendFormat": "{{le}}",
          "refId": "A"
        }
      ],
      "options": { "legend": { "show": true } },
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] }
    }
  ]
}
